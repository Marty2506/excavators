{% extends "layout.j2" %}

{% set page = "about" %}

{% block content %}
  <main class="page-main">
    <h1 class="visually-hidden">О нас</h1>

    {% include "./blocks/about-section.j2" %}
    {% include "./blocks/partners.j2" %}

    <section class="about-video section">
      <div class="about-video__container container">
        <h2 class="about-video__title section__title">Видео о производстве</h2>
